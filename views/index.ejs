<!DOCTYPE html>
<html>

<head>
    <% include ./partials/head.ejs %>
  <title>
    <%=  %>
  </title>
  <link rel='stylesheet' href='/css/style.css' />
</head>


    <% include ./partials/header.ejs %>


<body class="bg-dark"> 
    <div class="container bg-light">
    <!-- NE PAS AJOUTER DE type="button" sur un a quand il y a bootstrap de charger -->
    <!-- Il génère une difference entre chrome et firefox -->
        <a href="voitures/admin/"  class="btn btn-dark mt-3"> Admin</a>
  <h1 class="text-center p-5"> Accueil</h1>
  
      <div class="row">
          <% voitures.forEach(function(voiture){ %>
            <% if (voiture.actif === "on"){%> 
          <div class="col-md-4 pb-3 pt-3">
              <div class="card" style="width: 18rem;">
                  <img src="<%= voiture.image %>" class="card-img-top img-fluid">

                  <div class="card-body text-center">
                      <h5 class="font-weight-bold"><%=voiture.marque %></h5>
                      <div class="row justify-content-center">
                          <%=voiture.prix %> EUR
                      </div>
                      <a href="voitures/show/<%= voiture._id %> "  class="btn btn-primary mt-3">Voir plus</a>
                      
                    </div>
                </div> 
                </div>
                <% } %>
            
  <% }); %>
     
</div>
</body>

</html>