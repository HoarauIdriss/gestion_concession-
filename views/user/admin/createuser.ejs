<% include ../../partials/head.ejs %>
    <% include ../../partials/header.ejs %>
        <div class="container-fluid bg-dark p-5">
            <div class="container bg-light border-top-red p-5 ">
                <a href="/" class="btn btn-success"> Retourner au login</a>
                <div class="container-fluid p-5 d-flex justify-content-center">

                    <div class="row ">

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Please sign up
                                    <small>It's free!</small>
                                </h3>
                            </div>
                            <div class="panel-body">
                                <form role="form " class="needs-validation" novalidate>
                                    <div class="form-group">

                                        <div class="form-group">
                                            <input type="text" name="first_name" id="first_name" class="form-control input-sm" placeholder="Username" required>
                                            <div class="invalid-feedback text-left">
                                                Entrez votre "username"
                                            </div>
                                        </div>

                                    </div>



                                    <div class="form-group">
                                        <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address" required>
                                        <div class="invalid-feedback text-left">
                                            Entrez votre email
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-xs-6 col-sm-6 col-md-6">
                                            <div class="form-group">
                                                <input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password" required>
                                                <div class="invalid-feedback text-left">
                                                    Entrez votre mot de passe
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-6 col-sm-6 col-md-6">
                                            <div class="form-group">
                                                <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password"
                                                    required>
                                                <div class="invalid-feedback text-left">
                                                    Entrez la confirmation de votre mot de passe
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <button type="submit" value="Register" class="btn btn-danger btn-block"> REGISTER</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <script>
                // Validation des champs du formulaire via JavaScript
                (function () {
                    'use strict';
                    window.addEventListener('load', function () {
                        // Fetch all the forms we want to apply custom Bootstrap validation styles to
                        var forms = document.getElementsByClassName('needs-validation');
                        // Loop over them and prevent submission
                        var validation = Array.prototype.filter.call(forms, function (form) {
                            form.addEventListener('submit', function (event) {
    
                                if (form.checkValidity() === false) {
                                    event.preventDefault();
                                    event.stopPropagation();
                                }
    
                                form.classList.add('was-validated');
                            }, false);
                        });
                    }, false);
                })();
            </script>
