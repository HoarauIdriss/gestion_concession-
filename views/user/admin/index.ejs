            <!-- PAGE ADMIN DE LA LISTE DES UTILISATEURS -->

            <!--*****************************************-->



    <!--pour le lien "a", contient le lien vers la page "create"-->
    <h1 class="text-center mb-5 mt-5 pb-2 border-bottom-red mx-auto" > <i class="fas fa-user-cog color-dred mr-3"></i>Gestion des USERS </h1>
    
    <!-- NE PAS AJOUTER DE type="button" sur un a quand il y a bootstrap de charger -->
    <!-- Il génère une difference entre chrome et firefox -->
    <div class="container-fluid bg-dark p-3 d-flex justify-content-center  "><a href="/users/create" class="btn btn-info p-50 py-3 mb-2  "> <i class="far fa-plus-square color-grey mx-2"></i>  Ajouter utilisateur </a></div>
    <table class="table table-striped table-light">
      <thead class="table-dark">
        <tr class="text-uppercase">
          <th scope="col">Username</th>
          <th scope="col">Email</th>
          <th scope="col">Droit</th>
        <!--  <th scope="col">Editer</th> -->
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user){ %>
          <tr>
            <!--liste du tableau-->
            <td scope="row"><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.droit %></td>
            <!-- bouton qui édite dans la derniere colonne -->
          <!--  <td><a href="/users/admin/edit/<%= user._id%>" class="btn btn-outline-dark"> <i class="far fa-edit"></i> Editer</a> </td> -->
          </tr>
        <% }); %>

      </tbody>
    </table>
    <div class="container d-flex justify-content-center"> <a href="#top" id="toTop" class="  justify-content-center" >   <i class="fas fa-chevron-circle-up fa-5x  p-5 color-dred"></i> </a>  </div>
  
  <script>
    (function() {
      $(window).scroll(function() {
  if ($(this).scrollTop() > 100) {
		$('i').fadeIn();
	} else {
	  $('i').fadeOut();
	}
});
      $('a[href^="#"]').click(function(){
	var the_id = $(this).attr("href");
	$('html,body').animate({
		scrollTop:$(the_id).offset().top
	}, 'slow');
	return false;
});
})
  </script>
