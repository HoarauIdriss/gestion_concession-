<% include ../../partials/head.ejs %>
  <div class="container">
  <a href="/voitures/admin"  class="btn btn-dark mt-5">Accueil administration</a>
    <form action="/voitures/admin/update/<%= voiture._id %>" method="POST" class="needs-validation" novalidate>
      <div class="form-group mt-2">
        <h1 for="">Editer une voiture</h1>
        <input type="text" class="form-control mt-2" name="marque" value="<%= voiture.marque %>" id="marque" aria-describedby="" placeholder="Marque" required>
        <div class="invalid-feedback">
          ajouter une marque
        </div>
        <input type="text" class="form-control mt-2" name="modele" value="<%= voiture.modele %>" id="modele" aria-describedby="" placeholder="Modèle" required>
        <div class="invalid-feedback">
          ajouter un modèle
        </div>
        <input type="text" class="form-control mt-2" name="image" value="<%= voiture.image %>" id="image" aria-describedby="" placeholder="Image" required>
        <div class="invalid-feedback">
          ajouter le lien vers l'image
        </div>
        <input type="text" class="form-control mt-2" name="puissance" value="<%= voiture.puissance %>" id="puissance"  min="1" max="15" aria-describedby="" placeholder="Puissance" required>
        <div class="invalid-feedback">
          ajouter la puissance
        </div>
        <select class="form-control mt-2" name="motorisation"  id="motorisation">
          <option value="Diesel">Diesel</option>
          <option value="Essence">Essence</option>
          <option value="Hybride">Hybride</option>
          <option value="Electrique">Electrique</option>
        </select>
        <input type="number" class="form-control mt-2" name="prix" value="<%= voiture.prix %>" id="prix" step="100"  aria-describedby="" placeholder="Prix" required>
        <div class="invalid-feedback">
          ajouter un prix
        </div>
        <input type="text" class="form-control mt-2" name="couleur" value="<%= voiture.couleur %>" id="couleur" aria-describedby="" placeholder="Couleur"required>
        <div class="invalid-feedback">
          ajouter une couleur
        </div>
        <input type="number" class="form-control mt-2" name="portes" value="<%= voiture.portes %>" id="portes" aria-describedby="" placeholder="Nombre de portes" required>
        <div class="invalid-feedback">
          ajouter le nombre de portes
        </div>
        <input type="number" class="form-control mt-2" name="places" value="<%= voiture.places %>" id="places" aria-describedby="" placeholder="Nombre de places" required>
        <div class="invalid-feedback">
          ajouter le nombre de places
        </div>
        <label for="actif" class="mt-3">Actif = <%= voiture.actif %></label>        
        <input type="checkbox" name="actif" id="actif" <% if (voiture.actif="on") { %> checked <% } %>>
      </div>
      <button type="submit" class="btn btn-primary">Editer</button>
    </form>
  </div><script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function() {
      'use strict';
      window.addEventListener('load', function() {
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.getElementsByClassName('needs-validation');
        // Loop over them and prevent submission
        var validation = Array.prototype.filter.call(forms, function(form) {
          form.addEventListener('submit', function(event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();
    </script>
    <% include ../../partials/footer.ejs %>