<% include ../../partials/head.ejs %>
 <% include ../../partials/header.ejs %>
    <!--pour le lien "a", contient le lien vers la page "create"-->
    <h1 class="text-center pb-5">Liste des voitures </h1>
    
    <!-- NE PAS AJOUTER DE type="button" sur un a quand il y a bootstrap de charger -->
    <!-- Il génère une difference entre chrome et firefox -->
    <p><a href="/voitures/admin/create" class="btn btn-outline-dark btn-block py-3">Ajouter</a></p>
    <table class="table table-striped table-light">
      <thead class="table-dark">
        <tr>
          <th scope="col">marque</th>
          <th scope="col">modele</th>
          <th scope="col">image</th>
          <th scope="col">puissance</th>
          <th scope="col">motorisation</th>
          <th scope="col">prix</th>
          <th scope="col">couleur</th>
          <th scope="col">nombre de portes</th>
          <th scope="col">nombre de places</th>
          <th scope="col">actif</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% voitures.forEach(function(voiture){ %>
          <tr>
            <!--liste du tableau-->
            <td scope="row"><%= voiture.marque %></td>
            <!--pour le lien "a", contient le lien vers la page "edit"-->
            <td><%= voiture.modele %></td>           
            <td><img class="rounded" src="<%= voiture.image %>" alt="" width="42" height="42"></td>
            <td><%= voiture.puissance %></td>
            <td><%= voiture.motorisation %></td>
            <td><%= voiture.prix %> €</td>
            <td><%= voiture.couleur %></td>
            <td><%= voiture.portes %></td>
            <td><%= voiture.places %></td>
            <td><% if(voiture.actif == "on"){ %>
              OUI
              <% }else{ %>
              NON
              <% } %>
            </td>
            <!--bouton qui édite dans la derniere colonne-->
            <td><a href="/voitures/admin/edit/<%= voiture._id%>" class="btn btn-outline-dark">Editer</a> </td>
          </tr>
        <% }); %>

      </tbody>
    </table>
  
    <% include ../../partials/footer.ejs %>
