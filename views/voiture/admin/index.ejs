<% include ../../partials/head.ejs %>
 <% include ../../partials/header.ejs %>

    <!--pour le lien "a", contient le lien vers la page "create"-->
    <h1 class="text-center mb-5 pb-2 border-bottom-red mx-auto" >Gestion des voitures </h1>
    
    <!-- NE PAS AJOUTER DE type="button" sur un a quand il y a bootstrap de charger -->
    <!-- Il génère une difference entre chrome et firefox -->
    <div class="container-fluid bg-dark p-3 d-flex justify-content-center  "><a href="/voitures/admin/create" class="btn btn-danger p-50 py-3 mb-2  "> <i class="far fa-plus-square color-grey mx-2"></i>  Ajouter voiture </a></div>
    <table class="table table-striped table-light">
      <thead class="table-dark">
        <tr>
          <th scope="col">marque</th>
          <th scope="col">modele</th>
          <th scope="col">image</th>
          <th scope="col">puissance</th>
          <th scope="col">motorisation</th>
          <th scope="col">prix</th>
          <th scope="col">couleur</th>
          <th scope="col">nombre de portes</th>
          <th scope="col">nombre de places</th>
          <th scope="col">actif</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% voitures.forEach(function(voiture){ %>
          <tr>
            <!--liste du tableau-->
            <td scope="row"><%= voiture.marque %></td>
            <!--pour le lien "a", contient le lien vers la page "edit"-->
            <td><%= voiture.modele %></td>           
            <td><img class="rounded" src="<%= voiture.image %>" alt="" width="42" height="42"></td>
            <td><%= voiture.puissance %></td>
            <td><%= voiture.motorisation %></td>
            <td><%= voiture.prix %> €</td>
            <td><%= voiture.couleur %></td>
            <td><%= voiture.portes %></td>
            <td><%= voiture.places %></td>
            <td><% if(voiture.actif == "on"){ %>
             <span class="text-success font-weight-bold"> OUI </span>
              <% }else{ %>
                <span class="text-danger">  NON </span>
              <% } %>
            </td>
            <!--bouton qui édite dans la derniere colonne-->
            <td><a href="/voitures/admin/edit/<%= voiture._id%>" class="btn btn-outline-dark"> <i class="far fa-edit"></i> Editer</a> </td>
          </tr>
        <% }); %>

      </tbody>
    </table>
    <div class="container d-flex justify-content-center"> <a href="#top" id="toTop" class="  justify-content-center" >   <i class="fas fa-chevron-circle-up fa-5x  p-5 color-dred"></i> </a>  </div>
  
  <script>
    (function() {
      $(window).scroll(function() {
  if ($(this).scrollTop() > 100) {
		$('i').fadeIn();
	} else {
	  $('i').fadeOut();
	}
});
      $('a[href^="#"]').click(function(){
	var the_id = $(this).attr("href");
	$('html,body').animate({
		scrollTop:$(the_id).offset().top
	}, 'slow');
	return false;
});
})
  </script>
