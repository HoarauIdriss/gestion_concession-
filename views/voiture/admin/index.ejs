<% include ../../partials/head.ejs %>

  <body>
    <!--pour le lien "a", contient le lien vers la page "create"-->
    <h1>Liste des voitures <a type="button" href="/voitures/create" class="btn btn-outline-dark">Ajouter</a></h1>
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">marque</th>
          <th scope="col">modele</th>
          <th scope="col">image</th>
          <th scope="col">puissance</th>
          <th scope="col">motorisation</th>
          <th scope="col">prix</th>
          <th scope="col">couleur</th>
          <th scope="col">nombre de portes</th>
          <th scope="col">nombre de places</th>
          <th scope="col">actif</th>
        </tr>
      </thead>
      <tbody>
        <% voitures.forEach(function(voiture){ %>
          <tr>
            <!--liste du tableau-->
            <td scope="row"><%= voiture.marque %></td>
            <!--pour le lien "a", contient le lien vers la page "edit"-->
            <td><%= voiture.modele %></td>           
            <td><img src="<%= voiture.image %>" alt="" width="42" height="42"></td>
            <td><%= voiture.puissance %></td>
            <td><%= voiture.motorisation %></td>
            <td><%= voiture.prix %></td>
            <td><%= voiture.couleur %></td>
            <td><%= voiture.portes %></td>
            <td><%= voiture.places %></td>
            <td><%= voiture.actif %></td>
            <!--bouton qui Ã©dite dans la derniere colonne-->
            <td><a type="button" href="/voitures/admin/edit/<%= voiture._id%>" class="btn btn-outline-light">Editer</a> </td>
          </tr>
        <% }); %>

      </tbody>
    </table>
  
    <% include ../../partials/footer.ejs %>
  
  </body>